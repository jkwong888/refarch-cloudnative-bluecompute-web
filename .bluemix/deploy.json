{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "BlueCompute Web Deployment to Bluemix",
    "description": "bluecompute web toolchain",
    "longDescription": "Information entered here will be used at deployment time.",
    "type": "object",
    "properties": {
        "deploy-region": {
            "description": "Deploy to this Bluemix Region",
            "type": "string"
        },
        "deploy-org": {
            "description": "Deploy to this Bluemix Organization",
            "type": "string"
        },
        "deploy-space": {
            "description": "Deploy to this space",
            "type": "string"
        },
        "route-domain": {
            "description": "Domain name. Example: mybluemix.net for runtimes in US-South",
            "type": "string"
        }
    },
    "required": [
        "deploy-region",
        "deploy-org",
        "deploy-space",
        "route-domain"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Domain name for all routes",
            "key": "route-domain"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["33%", "33%", "33%"],
            "items": [
                {
                    "type": "label",
                    "title": "Region"
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "select",
                    "key": "deploy-region",
                    "readonly": false
                },
                {
                    "type": "select",
                    "key": "deploy-org",
                    "readonly": false
                },
                {
                    "type": "select",
                    "key": "deploy-space",
                    "readonly": false
                }
            ]
        }
    ]
}
